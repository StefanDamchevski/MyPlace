@model MyPlace.ViewModels.UserDetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<p>
    <a asp-action="Create" asp-controller="Image" class="btn btn-primary">Create New Image</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Image
            </th>
            <th>
                IsPrivate
            </th>
            <th>
                Date Posted
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Images.Count == 0)
        {
            <tr>
                <td>No Results to show</td>
            </tr>
        }
        else
        {
            @foreach (var item in Model.Images)
            {

                <tr>
                    <td>
                        <img src="@item.ImageUrl" width="100" height="100" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsPrivate)
                    </td>
                    <td>
                        @item.DateCreated
                    </td>
                    <td>
                        <a asp-action="Edit" asp-controller="Image" asp-route-imageId="@item.Id" class="btn btn-primary btn-sm">Edit</a> |
                        <a asp-action="Delete" asp-controller="Image" asp-route-imageId="@item.Id" class="btn btn-primary btn-sm">Delete</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
